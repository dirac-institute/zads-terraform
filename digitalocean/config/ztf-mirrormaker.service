[Unit]
Description=ZTF Alert Broker Mirror Maker
After=confluent-kafka
Requires=confluent-kafka

[Service]
Type=simple
User=cp-kafka
Group=confluent
Environment=KAFKA_HEAP_OPTS=-Xmx4G
ExecStart=/usr/bin/kafka-mirror-maker --consumer.config /etc/ztf/ipac.properties --producer.config /etc/ztf/uw.properties --whitelist="^ztf.*1$" --num.streams=8
TimeoutStopSec=180
Restart=no

[Install]
WantedBy=multi-user.target
